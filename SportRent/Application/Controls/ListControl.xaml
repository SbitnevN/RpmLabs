<UserControl x:Class="SportRent.Application.Controls.ListControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SportRent.Application.Controls"
             mc:Ignorable="d"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DataGrid x:Name="Data" IsReadOnly="True" 
                 ItemsSource="{Binding Items}" 
                 AutoGenerateColumns="False" 
                 Margin="10" 
                 Grid.ColumnSpan="3"/>

        <StackPanel Grid.Row="1" 
                   Orientation="Horizontal" 
                   HorizontalAlignment="Center" 
                   Margin="10">
            <Button x:Name="AddButton" 
                   Content="Добавить" 
                   Width="100" 
                   Margin="5,0" 
                   Click="AddButtonClick"/>
            <Button x:Name="ChangeButton" 
                   Content="Изменить" 
                   Width="100" 
                   Margin="5,0" 
                   Click="ChangeButtonClick"/>
            <Button x:Name="RemoveButton" 
                   Content="Удалить" 
                   Width="100" 
                   Margin="5,0" 
                   Click="RemoveButtonClick"/>
        </StackPanel>
    </Grid>
</UserControl>