<Window x:Class="SportRent.Application.WorkSpaces.SignInWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SportRent.Application.WorkSpaces"
        mc:Ignorable="d"
        Title="Вход" Height="349" Width="260">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="161*"/>
            <RowDefinition Height="57*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="75*"/>
        </Grid.RowDefinitions>
        <TextBox HorizontalAlignment="Center" Margin="0,128,0,0" TextWrapping="Wrap" Text="{Binding Login}" VerticalAlignment="Top" Width="128" Height="19"/>
        <TextBox HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" Text="{Binding Password}" VerticalAlignment="Top" Width="128" Height="19" Grid.Row="1"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,92,0,0" TextWrapping="Wrap" Text="Вход" VerticalAlignment="Top" Height="16" Width="26"/>
        <Button x:Name="EnterButton" Content="Вход" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Center" Width="92" Click="EnterButtonClick"/>
        <Button x:Name="RegisterButton" Content="Регистрация" HorizontalAlignment="Center" Grid.Row="3" VerticalAlignment="Top" Width="92" Margin="0,10,0,0" Click="RegisterButtonClick"/>

    </Grid>
</Window>
