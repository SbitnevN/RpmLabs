<UserControl x:Class="MedRepairTrack.Application.UserList.UserListEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MedRepairTrack.Application.UserList"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="391*"/>
            <ColumnDefinition Width="409*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="289*"/>
            <RowDefinition Height="145*"/>
        </Grid.RowDefinitions>

        <ListView x:Name="UserList" ItemsSource="{Binding Users}" Grid.ColumnSpan="2" Margin="0,0,0,150" Grid.RowSpan="2"/>
        <Button Content="Добавить" Grid.Row="1" VerticalAlignment="Center" Height="36" Click="AddNewUser" Margin="10,0,10,0"/>
        <Button Content="Изменить" Grid.Row="1" Grid.Column="1" Height="36" VerticalAlignment="Center" Click="EditUser" Margin="10,0,10,0"/>
    </Grid>
</UserControl>
