<UserControl x:Class="MedRepairTrack.Application.Authentication.Login.LoginControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MedRepairTrack.Application.Authentication.Login"
             mc:Ignorable="d" Width="366" Height="302">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="148*"/>
            <ColumnDefinition Width="315*"/>
            <ColumnDefinition Width="148*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="35*"/>
            <RowDefinition Height="28*"/>
            <RowDefinition Height="24*"/>
            <RowDefinition Height="24*"/>
        </Grid.RowDefinitions>
        <TextBox Grid.Row="1" TextWrapping="Wrap" FontSize="15" Text="Логин" Grid.Column="1" Margin="10,0,10,0" Height="20" VerticalAlignment="Center"/>
        <Label HorizontalContentAlignment="Center" Content="Вход!" FontSize="20" Margin="34,33,33,0" Grid.Column="1" Height="37" VerticalAlignment="Top"/>
        <TextBox Grid.Row="2" TextWrapping="Wrap" FontSize="15" Text="Пароль" VerticalAlignment="Center" Height="20" Grid.Column="1" Margin="10,0,10,0"/>
        <Button x:Name="EnterButton" Grid.Column="1" Content="Вход" Margin="10,0,0,0" Grid.Row="3" VerticalAlignment="Center" HorizontalAlignment="Left" Width="78" Height="20"/>
        <Button x:Name="RegistrationButton" Grid.Column="1" Content="Регистрация" Margin="0,0,10,0" Grid.Row="3" VerticalAlignment="Center" Height="20" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Right" Width="73">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Label HorizontalContentAlignment="Center" Foreground="Red" Grid.Column="1" Content="Ошибка" Grid.Row="4" VerticalAlignment="Center" Margin="10,0,10,0" Height="26"/>
    </Grid>
</UserControl>
