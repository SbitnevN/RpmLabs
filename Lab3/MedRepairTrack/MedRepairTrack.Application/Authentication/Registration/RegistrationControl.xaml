<UserControl x:Class="MedRepairTrack.Application.Authentication.Registration.RegistrationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MedRepairTrack.Application.Authentication.Registration"
             mc:Ignorable="d" Width="442" Height="325">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="148*"/>
            <ColumnDefinition Width="315*"/>
            <ColumnDefinition Width="148*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="86*"/>
            <RowDefinition Height="75*"/>
            <RowDefinition Height="60*"/>
            <RowDefinition Height="47*"/>
            <RowDefinition Height="57*"/>
        </Grid.RowDefinitions>
        <TextBox Grid.Row="1" TextWrapping="Wrap" FontSize="15" Text="Логин" Margin="10,38,10,0" Height="20" VerticalAlignment="Top" Grid.Column="1"/>
        <Label HorizontalContentAlignment="Center" Content="Регистрация!" FontSize="20" Margin="34,39,33,0" Grid.Column="1" Height="37" VerticalAlignment="Top"/>
        <TextBox Grid.Row="2" TextWrapping="Wrap" FontSize="15" Text="Пароль" VerticalAlignment="Center" Height="20" Grid.Column="1" Margin="10,0,10,0"/>
        <Button x:Name="EnterButton" Grid.Column="1" Content="Регистрация" Margin="10,0,0,0" Grid.Row="3" VerticalAlignment="Center" Height="20" HorizontalAlignment="Left" Width="82"/>
        <Button x:Name="ReturnButton" Grid.Column="1" Content="Назад" Margin="132,0,0,0" Grid.Row="3" VerticalAlignment="Center" Height="20" RenderTransformOrigin="0.223,0.69" HorizontalAlignment="Left" Width="86"/>
        <Label HorizontalContentAlignment="Center" Foreground="Red" Grid.Column="1" Content="Ошибка" Grid.Row="4" VerticalAlignment="Center" Margin="10,0,10,0"/>

    </Grid>
</UserControl>
