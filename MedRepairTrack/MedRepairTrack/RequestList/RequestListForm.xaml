<Window x:Class="MedRepairTrack.RequestList.RequestListForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MedRepairTrack.RequestList"
        mc:Ignorable="d"
        Title="RequestListForm" Height="450" Width="457">
    <Grid>
        <StackPanel>
            <ListView x:Name="RequestsListView" Height="251" ItemsSource="{Binding Requests}"/>
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Margin="50" MinHeight="30">
                <Button Margin="0 0 10 0" Click="EditNewRequest" Height="auto" MinWidth="150" Content="Изменить"/>
                <Button Margin="10 0 0 0" Click="AddNewRequest" Height="auto" MinWidth="150" Content="Добавить"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
